{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES6",
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
